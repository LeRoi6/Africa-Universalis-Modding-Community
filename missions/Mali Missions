#Mali missions

mali_conquest_missions = {
	slot = 1
	generic = no
	ai = yes
        has_country_shield=yes
	potential = {
tag=MAL
}

   

mali_kong={
   icon=mission_invade_kanem
   position=1
   
required_missions={

}
   
trigger={
owns_core_province = 1125 #Kong	
owns_core_province = 2252 #Lobi
} 

effect={
every_owned_province = {
add_institution_embracement = {
    which = feudalism
    value = 100} 
}
}




}


mali_jolof={
   icon=mission_conquer_benin
   position=2
   
required_missions={
mali_kong
}
   
trigger={
owns_all_provinces = {
	area=jolof_area
}

} 

effect={
add_country_modifier = { 
    name = mali_jolof_modifier
    duration = 7300  
}

}




}

mali_zafunu={
   icon=mission_invade_kanem
   position=3
   
required_missions={
mali_jolof
}
   
trigger={
owns_all_provinces = {
OR={
	culture=soninke
        culture=bambara}
}
} 

effect={
add_country_modifier = { 
    name = mali_expansion_modifier
    duration = 7300 
}
add_mil_power=75
}




}
mali_mossi={
   icon=mission_conquer_benin
   position=4
   
required_missions={
mali_zafunu
}
   
trigger={
owns_all_provinces = {
culture=mossi
}
} 

effect={
add_country_modifier = { 
    name = mali_mossi_modifier
    duration = 7300 
}

}




}



mali_songhai={
   icon=mission_the_songhai_campaign
   position=5
   
required_missions={
mali_mossi
}
   
trigger={
owns_core_province=1133 #Gao
} 

effect={
add_prestige=30
add_adm_power=75
}




}


mali_timbuktu={
   icon=mission_conquer_timbuktu
   position=6
   
required_missions={
mali_songhai
}
   
trigger={
owns_core_province=1132 #Timbuktu
} 

effect={
add_dip_power=75
add_mercantilism=3
}




}

#Missions'end
   }
	
mali_other_missions = {
	slot = 2
	generic = no
	ai = yes
        has_country_shield=yes
	potential = {
tag=MAL
}
mali_trade={
   icon=mission_conquer_timbuktu
   position=3
   
required_missions={
mali_jolof
}
   
trigger={
1132 = { #Timbuktu
	trade_share = {
		country = ROOT
		share = 50
	}
}
} 

effect={
add_dip_power=200
}

}
mali_vassals={
   icon=mission_african_soldier
   position=4
   
required_missions={
mali_zafunu
}
   
trigger={
num_of_subjects = 2
} 

effect={
add_country_modifier = { 
    name = mali_subjects_modifier
    duration = -1  
}

}
}

mali_cities={
   icon=mission_invade_mali
   position=5
   
required_missions={
mali_mossi
}
   
trigger={
num_of_owned_provinces_with = {
	value = 6
	development=15
}
} 

effect={
add_country_modifier = { 
    name = mali_prosperity_modifier
    duration = -1  
}

}
}

mali_modernization={
   icon=scramble_for_africa
   position=6
   
required_missions={
mali_songhai
}
   
trigger={
has_institu
has_institution = renaissance
has_institution = colonialism
} 


effect={
add_country_modifier = { 
    name = mali_tech_modifier
    duration = -1  
}

}

#Missions'end	
  }

}
